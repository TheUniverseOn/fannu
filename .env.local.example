# FanNu Environment Variables
# Copy this file to .env.local and fill in the values

# =============================================================================
# SUPABASE CONFIGURATION
# =============================================================================
# Your Supabase project URL (from Supabase dashboard)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co

# Supabase anonymous key (safe to expose in browser)
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key

# Supabase service role key (server-side only, never expose to client)
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# =============================================================================
# PAYMENT SERVICE PROVIDER (PSP) CONFIGURATION
# =============================================================================
# PSP provider name (e.g., santimpay, chapa, telebirr)
PSP_PROVIDER=santimpay

# PSP API base URL
PSP_API_URL=https://api.psp-provider.com

# PSP API key for authentication
PSP_API_KEY=your-psp-api-key

# Webhook secret for verifying PSP callbacks
PSP_WEBHOOK_SECRET=your-webhook-secret

# Callback URL for payment notifications
PSP_CALLBACK_URL=https://fannu.fly.dev/api/webhooks/psp

# =============================================================================
# AFRICA'S TALKING SMS CONFIGURATION
# =============================================================================
# API key from Africa's Talking dashboard
AFRICAS_TALKING_API_KEY=your-africas-talking-api-key

# Africa's Talking username (sandbox or production)
AFRICAS_TALKING_USERNAME=your-username

# Sender ID for SMS messages
AFRICAS_TALKING_SENDER_ID=FANNU

# =============================================================================
# TELEGRAM BOT CONFIGURATION
# =============================================================================
# Telegram bot token from @BotFather
TELEGRAM_BOT_TOKEN=your-telegram-bot-token

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
# Public-facing application URL
NEXT_PUBLIC_APP_URL=https://fannu.fly.dev

# WhatsApp support number (with country code)
NEXT_PUBLIC_SUPPORT_WHATSAPP=+251911234567
